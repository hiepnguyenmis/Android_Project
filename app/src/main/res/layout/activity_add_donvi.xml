<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDonviActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Điền vào thông tin đơn vị"
            android:textColor="@color/colorPink"
            android:textSize="29sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TableRow
                android:layout_height="42dp"
                android:layout_marginTop="10dp">

            </TableRow>
            <TableRow
                android:layout_height="42dp"
                android:layout_marginTop="10dp">


                <TextView

                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    android:text="Tên Đơn Vị: "
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/edTendv"
                    android:layout_width="259dp"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_height="42dp"
                android:layout_marginTop="10dp">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Số Điện Thoại: "
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/edsdtdv"
                    android:layout_width="259dp"
                    android:layout_height="match_parent" />
            </TableRow>

            <TableRow
                android:layout_height="42dp"
                android:layout_marginTop="10dp">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Phường/Xã: "
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <Spinner
                    android:id="@+id/spPhuongxa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Spinner>
            </TableRow>

            <TableRow
                android:layout_height="42dp"
                android:layout_marginTop="10dp">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Quận/Huyện: "
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <Spinner
                    android:id="@+id/spquanhuyen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Spinner>
            </TableRow>

            <TableRow
                android:layout_height="42dp"
                android:layout_marginTop="10dp">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tỉnh/Thành: "
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <Spinner
                    android:id="@+id/sptinhthanh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Spinner>
            </TableRow>
            <TableRow
                android:layout_height="42dp"
                android:layout_marginTop="10dp">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Loại "
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <Spinner
                    android:id="@+id/sploaidv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Spinner>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnadddv"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg"
                android:text="Thêm đơn vị"
                android:textSize="23sp"
                android:layout_marginLeft="20dp"/>

            <Button
                android:id="@+id/btnadddiachi"
                android:layout_marginLeft="10dp"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg"
                android:text="Thêm địa chỉ"
                android:textSize="23sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/lseditdv"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>